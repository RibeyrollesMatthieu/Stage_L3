<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <Button
        android:id="@+id/exp_buttons_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/experiment_equals"
        android:padding="@dimen/experiment_buttons_padding"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"/>

    <Button
        android:id="@+id/exp_buttons_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/experiment_less"
        android:padding="@dimen/experiment_buttons_padding"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/exp_buttons_equals"/>

    <Button
        android:id="@+id/exp_buttons_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/experiment_more"
        android:padding="@dimen/experiment_buttons_padding"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/exp_buttons_equals"/>
</RelativeLayout>