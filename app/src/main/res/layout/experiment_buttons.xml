<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:keepScreenOn="true">

    <!-- + -->
    <Button
        android:id="@+id/exp_buttons_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/experiment_buttons_padding"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"/>

    <!-- = -->
    <Button
        android:id="@+id/exp_buttons_equals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/experiment_buttons_padding"

        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@id/exp_buttons_more"/>

    <!-- - -->
    <Button
        android:id="@+id/exp_buttons_less"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/experiment_buttons_padding"

        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/exp_buttons_equals"
        tools:ignore="RelativeOverlap" />
</RelativeLayout>